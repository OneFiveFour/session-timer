CREATE TABLE taskGroup (
  id INTEGER PRIMARY KEY NOT NULL,
  title TEXT NOT NULL,
  color INTEGER NOT NULL,
  playMode TEXT NOT NULL,
  numberOfRandomTasks INTEGER NOT NULL,
  sessionId INTEGER NOT NULL
);

