new:
INSERT INTO taskGroup VALUES (?,?,?,?,?,?);

getById:
SELECT * FROM taskGroup WHERE id = :id;

getBySessionId:
SELECT * FROM taskGroup WHERE sessionId = :sessionId;

deleteById:
DELETE FROM taskGroup WHERE id = :id;

deleteBySessionId:
SELECT * FROM taskGroup WHERE sessionId = :sessionId;

setTitle:
UPDATE taskGroup SET title = :title WHERE id = :id;

setColor:
UPDATE taskGroup SET color = :color WHERE id = :id;

setPlayMode:
UPDATE taskGroup SET playMode = :playMode WHERE id = :id;

setNumberOfRandomTasks:
UPDATE taskGroup SET numberOfRandomTasks = :numberOfRandomTasks WHERE id = :id;

